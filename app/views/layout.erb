          <li><a href="/">Home</a></li>
          <li><a href="/users/<%=current_user.id%>"><%=current_user.username.capitalize%>'s profile</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
     <% else %>
         <ul>
            <li><a href="#">Home</a></li>
            <li> <a href="/login">Login!</a></li>
            <li> <a href="/users/new">Sign Up!</a></li>
